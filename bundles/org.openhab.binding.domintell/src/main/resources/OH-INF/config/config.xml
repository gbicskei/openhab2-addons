<?xml version="1.0" encoding="UTF-8"?>
<config-description:config-descriptions
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:config-description="https://openhab.org/schemas/config-description/v1.0.0"
	xsi:schemaLocation="https://openhab.org/schemas/config-description/v1.0.0
		https://openhab.org/schemas/config-description-1.0.0.xsd">
	<config-description uri="thing-type:domintell:bridge">
		<parameter name="address" type="text" required="true">
			<label>IP Address/Host Name</label>
			<description>IP Address of Domintell DETH02 IP-interface</description>
			<advanced>false</advanced>
			<context>network-address</context>
		</parameter>
		<parameter name="port" type="integer" required="false">
			<label>Port</label>
			<description>Port to communicate with Domintell DETH02 IP-interface, default 17481</description>
			<default>17481</default>
			<advanced>false</advanced>
		</parameter>
	</config-description>
	<config-description uri="thing-type:domintell:addressable">
		<parameter name="moduleType" type="text" required="true">
			<label>Module Type</label>
			<description>Domintell module type</description>
			<advanced>false</advanced>
			<required>true</required>
		</parameter>
		<parameter name="serialNumber" type="text" required="true">
			<label>Serial Number</label>
			<description>Domintell serial number</description>
			<advanced>false</advanced>
			<required>true</required>
		</parameter>
	</config-description>
	<config-description uri="thing-type:domintell:contact">
		<parameter-group name="pushEvents">
			<label>Push Events Support</label>
			<description>Domintell button push events configuration.</description>
			<context>String</context>
			<advanced>true</advanced>
		</parameter-group>

		<parameter name="inverted" type="boolean" required="true">
			<label>Inverted</label>
			<description>Contact value should be inverted</description>
			<default>false</default>
			<advanced>false</advanced>
		</parameter>
		<parameter name="resetTimeout" type="integer" required="true" min="0" unit="s">
			<label>Reset Timeout</label>
			<description>If not 0 the item value will be reset and refreshed from Domintell</description>
			<default>0</default>
			<unitLabel>second</unitLabel>
			<advanced>false</advanced>
		</parameter>
		<parameter name="firePushEvents" type="boolean" required="true" groupName="pushEvents">
			<label>Fire Push Events</label>
			<description>Fire trigger events based on state changes</description>
			<default>false</default>
			<advanced>false</advanced>
		</parameter>
		<parameter name="shortPushTimeout" type="integer" required="true" min="0" unit="s" groupName="pushEvents">
			<label>Short Push Timeout</label>
			<description>Short push timeout in ms.</description>
			<default>300</default>
			<unitLabel>ms</unitLabel>
			<advanced>true</advanced>
		</parameter>
		<parameter name="longPushTimeout" type="integer" required="true" min="0" unit="s" groupName="pushEvents">
			<label>Long Push Timeout</label>
			<description>Long push timeout in ms.</description>
			<default>500</default>
			<unitLabel>ms</unitLabel>
			<advanced>true</advanced>
		</parameter>
		<parameter name="doublePushTimeout" type="integer" required="true" min="0" unit="s" groupName="pushEvents">
			<label>Double Push Timeout</label>
			<description>Double push timeout in ms.</description>
			<default>700</default>
			<unitLabel>ms</unitLabel>
			<advanced>true</advanced>
		</parameter>
	</config-description>
</config-description:config-descriptions>
